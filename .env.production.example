# =============================================================================
# SAUDAPAKKA - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
#
# HOW TO USE:
# 1. Copy this file to: saudapakka_backend/.env
# 2. Fill in all values with your production credentials
# 3. NEVER commit the filled .env file to git!
#
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings (REQUIRED)
# -----------------------------------------------------------------------------
# Generate new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-generate-new-one

DEBUG=False

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
POSTGRES_DB=saudapakka_db
POSTGRES_USER=saudapakka_user
POSTGRES_PASSWORD=your-strong-database-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Email Configuration (REQUIRED)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@saudapakka.com

# -----------------------------------------------------------------------------
# Sandbox KYC API (REQUIRED)
# -----------------------------------------------------------------------------
SANDBOX_API_KEY=your-sandbox-api-key
SANDBOX_API_SECRET=your-sandbox-api-secret
